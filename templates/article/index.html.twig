{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <div class="container">

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">View article</th>
                <th scope="col">Modify</th>
                <th scope="col">Update</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>
                        <h1>{{ article.title }}</h1>
                    </td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('show_article', {'slug': article.slug}) }}">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('update_article', {'slug': article.slug}) }}">
                            <i class="fas fa-pen"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('delete_article', {'slug': article.slug}) }}">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
